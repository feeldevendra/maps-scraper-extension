{
  "manifest_version": 3,
  "name": "Maps Company Scraper",
  "version": "1.0",
  "description": "Upload CSV of companies, search on Google Maps, scrape details, show live results and export CSV.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://www.google.com/maps/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["results.html", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
