{
  "manifest_version": 3,
  "name": "Maps Scraper Extension",
  "version": "1.0",
  "description": "Scrapes data from Google Maps and shows results in a new tab.",
  "permissions": ["storage", "tabs", "scripting"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    {
      "resources": ["results.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
